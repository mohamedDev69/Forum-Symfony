{% extends 'base.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
    <h1>Forum</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ forum.id }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ forum.year }}</td>
            </tr>
            <tr>
                <th>Theme</th>
                <td>{{ forum.theme }}</td>
            </tr>
            <tr>
                <th>Sponsor</th>
                <td>
                {% for sponsor in forum.sponsors %}
                    {{ sponsor.name }} <br>
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_forum_index') }}">back to list</a>

    <a href="{{ path('app_forum_edit', {'id': forum.id}) }}">edit</a>

    {{ include('forum/_delete_form.html.twig') }}
{% endblock %}
